<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/chat.css" />
  <script>
    const room = "<%=roomId%>";
    const username = "<%=name%>";
  </script>
</head>

<body>
  <div class="chat-container">

    <header class="chat-header">
      <button type="button" class="btn mb-2"><a href="/users/login">Leave Room</a></button>
      <div>
        <button type="button" class="btn mb-2 invite-button" style="display:inline-block;"><a href="mailto:?subject=Your friend is calling you!&amp;body=Join with my meeting id: <%=roomId%> @https://frozen-earth-28579.herokuapp.com"
            title="Share by Email">Invite Participants</a></button>
        <form class="form-inline" style="display:inline-block;" action="/users/join" method="post">
          <div class="form-group mx-sm-3 mb-2">
            <input type="hidden" name="name" value="<%=name %>">
            <button type="submit" name="room_id" value="<%=roomId%>" class="btn"><i class="fas fa-video"></i> Join Call</button>
        </form>
      </div>



  </div>

  </header>
  <main class="chat-main">
    <div class="chat-sidebar">
      <h2> <i class="fas fa-comments"></i> Room Id:</h2>
      <input id="copyInput" type="text" value="<%=roomId%>">
      <button id="btnCopy" data-clipboard-target="#copyInput" title="Copy to clipboard"><i class="fas fa-clipboard"></i></button>
      <h2><i class="fas fa-globe"></i> Online Users:</h2>
      <hr style="background-color: white; height: 2px;">
      <ul id="users"></ul>
    </div>
    <div class="chat-messages">

    </div>
  </main>
  <div class="chat-form-container">
    <form id="chat-form">
      <input id="msg" type="text" placeholder="Type a message" required autocomplete="off" />
      <button class="btn send-button">Send</button>
    </form>
  </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.9.2/qs.min.js" integrity="sha256-TDxXjkAUay70ae/QJBEpGKkpVslXaHHayklIVglFRT4=" crossorigin="anonymous"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
  <script src="/js/main.js"></script>


</body>

</html>
